<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.PageTitle</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/styles.css" />

</head>
<body class="container">
    <header class="mb-4">
        <nav>
            <a asp-controller="Home" asp-action="Index">Главная</a> |
            <a asp-controller="Cars" asp-action="List">Car List</a> |


            @foreach (var cat in Model.AllCategories)
            {
                <a asp-controller="Cars" asp-action="List"
                   asp-route-category="@cat.Alias">@cat.Name</a>
                <span>|</span>
            }
            <a asp-controller="ShopCart" asp-action="Index">Shop Cart</a>
        </nav>
    </header>

    <div>

        @RenderBody()
    </div>
     
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/scripts.js" type="text/javascript"></script>
    </body>
</html>
