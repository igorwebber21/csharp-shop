@model ShopCartViewModel

<div class="container">
    @if (Model?.ShopCart?.ListShopItems != null)
    {
        foreach (var item in Model.ShopCart.ListShopItems)
        {
            <div class="row mb-3 p-3 border rounded">
                <div class="col-md-2">
                    <img src="@item.Car.Img" class="img-fluid" alt="@item.Car.Name" />
                </div>
                <div class="col-md-6">
                    <h4>@item.Car.Name</h4>
                    <p>@item.Car.ShortDesc</p>
                </div>

            </div>
        }

        <hr />

        <a class="btn btn-danger mb-5" asp-controller="Order" asp-action="Checkout">
            Оплатить
        </a>

    }
</div>